@using ElearnerApi.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="~/css/reset.css" />*@
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/x-icon" href="~/assets/logo.png">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-warning border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="navbar-brand text-white font-weight-bolder" asp-area="" asp-page="/Index"> <img width="50" height="50" src="~/assets/logo.png" /> </a>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("admin"))
                    {
                        <a class="navbar-brand text-white font-weight-bolder" asp-area="" asp-page="/Topics/Index"> <img width="50" height="50" src="~/assets/logo.png" /> </a>
                    }
                    @if (User.IsInRole("teacher"))
                    {
                        <a class="navbar-brand text-white font-weight-bolder" asp-area="" asp-page="/TopicsTeacher/TopicTeacher"> <img width="50" height="50" src="~/assets/logo.png" /> </a>
                    }
                    @if (User.IsInRole("user"))
                    {
                        <a class="navbar-brand text-white font-weight-bolder" asp-area="" asp-page="/Courses/CourseList"> <img width="50" height="50" src="~/assets/logo.png" /> </a>

                    }
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("teacher") || User.IsInRole("admin"))
                            {
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Topics/Index">Topics</a>

                                </li>
                            }
                            @if (User.IsInRole("teacher"))
                            {
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/TopicsTeacher/TopicTeacher">Classrooms</a>

                                </li>
                            }
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Courses/Index">Coursers</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Teachers/Index">Teachers</a>

                                </li>
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Customers/Index">Customers</a>

                                </li>
                            }
                            @if (User.IsInRole("user"))
                            {
                                <li class="nav-item">

                                    <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Courses/CourseList">Khóa học</a>

                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white justify-content-end" asp-area="" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @*<div class="container mt-5">*@
    <main role="main" class="" style="margin-top: 80px">
        <div class="">
            @RenderBody()
        </div>
    </main>
    @*</div>*@

    <footer class="pt-4 my-md-5 pt-md-5 border-top h-25">
        @*<footer class="pt-4 my-md-5 pt-md-5 border-top h-25 bg-light">*@
        <div class="container">
            &copy; 2022 - Eleanner

            <div>
                <p>
                    Trụ sở: Trường Đại học FPT TP.HCM Lô E2a-7, Đường D1, Long
                    Thạnh Mỹ, Thành Phố Thủ Đức, Thành phố Hồ Chí Minh
                </p>
                <div>
                    <p>Hotline: <a href="tel:+84393460787">+84393460787</a></p>
                    <p>Email: <a href="mailto:elearner.fpt@gmail.com">elearner.fpt@gmail.com</a></p>
                </div>
                <div>
                    <p>
                        Contact Us: <a class="ml-2 mr-2" href="https://www.instagram.com/elearner_exe/" target="_blank" rel="noopener noreferrer">
